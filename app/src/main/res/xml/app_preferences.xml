<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="General">

        <EditTextPreference
            android:title="App Title"
            android:summary="The title will be used in the main action bar."
            android:key="title"
            android:defaultValue="" />

    </PreferenceCategory>
